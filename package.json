{
  "name": "language-markit",
  "displayName": "Markit",
  "description": "Language support for Markit (.mit) files",
  "version": "0.3.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.80.0"
  },
  "type": "module",
  "main": "./extension.js",
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "contributes": {
    "languages": [
      {
        "id": "markit",
        "aliases": [
          "Markit",
          "markit"
        ],
        "extensions": [
          ".mit"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "markit",
        "scopeName": "text.markit",
        "path": "./syntaxes/markit.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "markit",
        "path": "./snippets/markit.json"
      }
    ],
    "commands": [
      {
        "command": "markit.addDefaultBlockIds",
        "title": "Add Default Block IDs",
        "category": "Markit"
      },
      {
        "command": "markit.insertNextParagraphId",
        "title": "Insert Next Paragraph ID",
        "category": "Markit"
      },
      {
        "command": "markit.insertNextNoteId",
        "title": "Insert Next Note ID",
        "category": "Markit"
      },
      {
        "command": "markit.getRegexForBlockStarts",
        "title": "Get Regex for Block Starts",
        "category": "Markit"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "markit.addDefaultBlockIds",
          "when": "editorLangId == markit"
        },
        {
          "command": "markit.insertNextParagraphId",
          "when": "editorLangId == markit"
        },
        {
          "command": "markit.insertNextNoteId",
          "when": "editorLangId == markit"
        },
        {
          "command": "markit.getRegexForBlockStarts",
          "when": "editorLangId == markit"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markit.insertNextParagraphId",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus && editorLangId == markit"
      },
      {
        "command": "markit.insertNextNoteId",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "editorTextFocus && editorLangId == markit"
      }
    ]
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "prettier": "^3.8.0",
    "vitest": "^2.1.9"
  }
}
